.shell powershell

# Reload whkd configuration
# alt + o                                     : taskkill /f /im whkd.exe && start /b whkd # if shell is cmd
win + ctrl + o                                : taskkill /f /im whkd.exe; Start-Process whkd -WindowStyle hidden # if shell is pwsh / powershell
win + ctrl + alt + o                          : komorebic reload-configuration

win + ctrl + h                                : komorebic toggle-shortcuts

# App shortcuts - these require shell to be pwsh / powershell
# The apps will be focused if open, or launched if not open
# alt + f                                     : if ($wshell.AppActivate('Firefox') -eq $False) { start firefox }
# alt + b                                     : if ($wshell.AppActivate('Chrome') -eq $False) { start chrome }

win + ctrl + q                                : komorebic close
win + ctrl + i                                : komorebic minimize
win + ctrl + m                                : komorebic toggle-maximize

# Focus windows
win + alt + left                              : komorebic focus left
win + alt + down                              : komorebic focus down
win + alt + up                                : komorebic focus up
win + alt + right                             : komorebic focus right
win + alt + shift + oem_4                     : komorebic cycle-focus previous # oem_4 is [
win + alt + shift + oem_6                     : komorebic cycle-focus next # oem_6 is ]

# Move windows
win + ctrl + left                             : komorebic move left
win + ctrl + down                             : komorebic move down
win + ctrl + up                               : komorebic move up
win + ctrl + right                            : komorebic move right
win + ctrl + return                           : komorebic promote

# Stack windows
win + ctrl + alt + left                       : komorebic stack left
win + ctrl + alt + down                       : komorebic stack down
win + ctrl + alt + up                         : komorebic stack up
win + ctrl + alt + right                      : komorebic stack right
win + ctrl + alt + u                          : komorebic unstack # oem_1 is ;
win + ctrl + alt + p                          : komorebic cycle-stack previous # oem_4 is [
win + ctrl + alt + n                          : komorebic cycle-stack next # oem_6 is ]

# Resize
win + ctrl + oem_plus                         : komorebic resize-axis horizontal increase
win + ctrl + oem_minus                        : komorebic resize-axis horizontal decrease
win + ctrl + alt + oem_plus                   : komorebic resize-axis vertical increase
win + ctrl + alt + oem_minus                  : komorebic resize-axis vertical decrease

# Manipulate windows
win + ctrl + f                                : komorebic toggle-float
win + ctrl + t                                : komorebic toggle-monocle

# Window manager options
win + ctrl + r                                : komorebic retile
win + ctrl + p                                : komorebic toggle-pause

# Layouts
win + ctrl + x                                : komorebic flip-layout horizontal
win + ctrl + y                                : komorebic flip-layout vertical

# Workspaces
win + alt + 1                                 : komorebic focus-workspace 0
win + alt + 2                                 : komorebic focus-workspace 1
win + alt + 3                                 : komorebic focus-workspace 2
win + alt + 4                                 : komorebic focus-workspace 3
win + alt + 5                                 : komorebic focus-workspace 4
win + alt + 6                                 : komorebic focus-workspace 5
win + alt + 7                                 : komorebic focus-workspace 6
win + alt + 8                                 : komorebic focus-workspace 7

# Move windows across workspaces
win + ctrl + 1                                : komorebic move-to-workspace 0
win + ctrl + 2                                : komorebic move-to-workspace 1
win + ctrl + 3                                : komorebic move-to-workspace 2
win + ctrl + 4                                : komorebic move-to-workspace 3
win + ctrl + 5                                : komorebic move-to-workspace 4
win + ctrl + 6                                : komorebic move-to-workspace 5
win + ctrl + 7                                : komorebic move-to-workspace 6
win + ctrl + 8                                : komorebic move-to-workspace 7
